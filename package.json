{
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "prepublish": "node scripts/prepublish.js",
    "pretest": "lerna bootstrap",
    "test:watch": "jest --coverage --forceExit --runInBand --bail --watch",
    "test:ci": "jest --coverage --forceExit --runInBand --verbose --bail",
    "coveralls": "nyc --instrument=false --source-map=false report --temp-directory=./coverage --reporter=text-lcov | coveralls",
    "publish-canary": "lerna publish --yes --skip-git --exact -c",
    "packages:clean": "lerna clean --yes",
    "packages:install": "lerna exec --concurrency 1 -- yarn install --ignore-engines && yarn install --ignore-engines",
    "packages:upgrade": "yarn upgrade-interactive --latest --ignore-engines && lerna exec --concurrency 1 -- yarn upgrade-interactive --latest --ignore-engines",
    "packages:bootstrap": "lerna bootstrap",
    "packages:maintenance": "yarn run packages:clean && yarn run packages:install && yarn run packages:upgrade && yarn run packages:bootstrap && exit"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "^0.0.30",
    "@types/body-parser": "^1.17.0",
    "@types/chalk": "^2.2.0",
    "@types/compression": "^0.0.36",
    "@types/config": "^0.0.34",
    "@types/cookie-parser": "^1.4.0",
    "@types/express": "^4.16.0",
    "@types/express-session": "^1.15.10",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.1.5",
    "@types/lodash": "^4.14.111",
    "@types/minimist": "^1.2.0",
    "@types/mongoose": "^5.2.0",
    "@types/node": "^10.5.2",
    "@types/passport": "^0.4.5",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/waterline": "^0.11.1",
    "@types/winston": "^2.3.9",
    "babel-eslint": "^8.2.6",
    "babel-plugin-syntax-object-rest-spread": "^6.13.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.1.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.1.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-react": "^7.10.0",
    "eslint-plugin-standard": "^3.1.0",
    "husky": "^0.14.3",
    "jest": "^23.4.0",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "nyc": "^12.0.2",
    "prettier": "^1.13.7",
    "supertest": "^3.1.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --single-quote --write",
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "template/.*",
      "pages/.*",
      "node_modules/*",
      "packages/.*/build",
      "packages/.*/build-es5",
      "packages/websocket",
      "packages/demo",
      "packages/postgresql",
      "packages/mssql",
      "packages/react",
      "packages/sequelize",
      "packages/mysql",
      "packages/disk",
      "packages/jest-runtime/src/__tests__/test_root.*",
      "website/.*",
      "integration_tests/runtime-internal-module-registry/__mocks__"
    ],
    "collectCoverageFrom": [
      "**/packages/**/**/*.js",
      "!**/bin/**",
      "!**/cli/**",
      "!**/view/**",
      "!**/perf/**",
      "!**/test/**"
    ]
  }
}
